extends layout
block title
    title enter
block content
    .enter
        form(role="form", method="post", action="/login/enter")
            .form-group
                label(for="exampleInputEmail1") Имя пользователя
                input(type="name", class="form-control", name="username", id="exampleInputEmail1", placeholder="Enter email")
            .form-group
                label(for="exampleInputPassword1") Пароль
                input(type="password", class="form-control", name="password", id="exampleInputPassword1", placeholder="Password")
            button(type="submit", class="btn btn-default") Войти
